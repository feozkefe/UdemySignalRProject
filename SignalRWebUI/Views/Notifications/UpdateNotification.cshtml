@model UpdateNotificationDto

@{
    ViewData["Title"] = "UpdateNotification";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Bildirim İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <input type="hidden" asp-for="NotificationId"/>
                        <div class="card-header">
                            <div class="card-title">Yeni Güncelle</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="type">Bildirim Türü:</label>
                                <input type="text" class="form-control" asp-for="Type" id="type">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="type">Bildirim Icon:</label>
                                <input type="text" class="form-control" asp-for="Icon" id="type">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="type">Açıklama:</label>
                                <input type="text" class="form-control" asp-for="Description" id="type">
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-success">Güncelle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>





