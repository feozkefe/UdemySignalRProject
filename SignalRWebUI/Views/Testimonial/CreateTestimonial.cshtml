@model CreateTestimonialDto
@{
    ViewData["Title"] = "CreateTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Referans İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Yeni Yorum Ekleme</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Name">Müşteri Ad Soyad:</label>
                                <input type="text" class="form-control" asp-for="Name" id="Name">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Title">Müşteri Ünvan:</label>
                                <input type="Title" class="form-control" asp-for="Title" id="Name">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="ImageURL">Müşteri Fotoğraf Url:</label>
                                <input type="text" class="form-control" asp-for="ImageURL" id="ImageURL">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Comment">Müşteri Yorumu:</label>
                                <input type="text" class="form-control" asp-for="Comment" id="Comment">
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-primary">Ekle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

